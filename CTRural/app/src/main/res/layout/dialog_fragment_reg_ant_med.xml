<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <CheckBox
            android:id="@+id/chk_reg_obe"
            android:text="Obesidad"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/chk_reg_hip"
            android:text="Hipertensión"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chk_reg_obe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/chk_reg_asm"
            android:text="Asma"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chk_reg_hip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/chk_reg_diab"
            android:text="Diabetes"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chk_reg_asm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/chk_reg_tbc"
            android:text="Tuberculosis"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chk_reg_diab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/chk_reg_neum"
            android:text="Neumonía"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chk_reg_tbc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/chk_reg_inm"
            android:text="Inmunodeficiencia"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chk_reg_neum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>